<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/coverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:transitionName="simple_fragment_transition"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@android:drawable/screen_background_dark_transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:padding="16dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="#FFFFFF"
                        android:gravity="start"
                        android:textStyle="bold"

                        />

                    <ImageView
                        android:id="@+id/affinity1ImageView"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="60dip"
                        android:layout_marginLeft="29dp"
                        android:padding="@dimen/icon_padding"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        />

                    <ImageView
                        android:id="@+id/affinity2ImageView"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:padding="@dimen/icon_padding"
                        android:gravity="center_horizontal"
                        android:layout_weight=".5"
                        />


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/skill1View"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon_height"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"
                />
            <ImageView
                android:id="@+id/skill2View"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/icon_height"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:padding="@dimen/icon_padding"
                />
            <ImageView
                android:id="@+id/skill3View"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/icon_height"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:padding="@dimen/icon_padding"
                />
            <ImageView
                android:id="@+id/skill4View"
                android:layout_width="0dp"
                android:layout_height="@dimen/icon_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:padding="@dimen/icon_padding"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>