<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:clipToPadding="false">

    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"

    android:layout_width="350dp"
    android:layout_height="180dp"
        android:layout_gravity="bottom"
        card_view:cardElevation="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="4dp"
        android:layout_x="2dp"
        android:layout_y="296dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/cardOfTheDay"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/cardOfTheDayText"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/winView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/card_view2"
        android:layout_alignEnd="@+id/card_view2" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
    android:id="@+id/lossView"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/textView2"
    android:layout_alignEnd="@+id/textView2"
    android:layout_marginRight="17dp"
    android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/rankView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lossView"
        android:layout_toEndOf="@+id/lossView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/rankView"
        android:layout_alignEnd="@+id/rankView"
        android:layout_alignBottom="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:fontFamily="monospace"
        android:textSize="50dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/winView"
        android:layout_alignLeft="@+id/card_view2"
        android:layout_alignStart="@+id/card_view2"
        android:layout_marginTop="29dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="155dp"
        android:layout_height="149dp"


        card_view:cardElevation="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="4dp"
        android:layout_x="5dp"
        android:layout_y="93dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/card_view3"
            android:layout_alignLeft="@+id/lossView"
            android:layout_alignStart="@+id/lossView"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7dp"
            android:text="@string/deck_info"
            android:textSize="28dp"/>

        <ImageView android:layout_height="100dp"
            android:layout_width="138dp"
            android:layout_gravity="center"
            android:src="@drawable/intellect"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/imageView2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:onClick="loginSend"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/card_view2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="155dp"
        android:layout_height="149dp"

        card_view:cardElevation="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="4dp"
        android:layout_x="5dp"
        android:layout_y="94dp"
        android:layout_alignTop="@+id/card_view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView android:layout_height="85dp"
            android:src="@drawable/paragon2"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"

            android:layout_width="132dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:text="@string/hero_link"
            android:textSize="26dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/textView3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:background="@null"
            android:onClick="heroClick"
            android:id="@+id/button4"
            android:layout_alignBottom="@+id/card_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/card_view2" />

    </android.support.v7.widget.CardView>


</RelativeLayout>