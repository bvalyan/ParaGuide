<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableRow android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutHERO"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/txt"
            app:layout_widthPercent="49%"
            app:layout_heightPercent="100%"
            app:layout_marginTopPercent="33%"
            app:layout_marginLeftPercent="25%"


            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/gradePercent"
            app:layout_widthPercent="9%"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="30.6%"
            app:layout_marginLeftPercent="71.2%"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/scorePercent"
            app:layout_widthPercent="9%"
            app:layout_heightPercent="40%"
            app:layout_marginTopPercent="53.6%"
            app:layout_marginLeftPercent="71.8%"
            android:textAlignment="center"/>

        <com.hookedonplay.decoviewlib.DecoView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_marginLeftPercent="66%"
            app:layout_marginTopPercent="5%"
            android:layout_gravity="center"
            android:id="@+id/dynamicArcView2"
            />

    </android.support.percent.PercentRelativeLayout>
    </TableRow>
    </TableLayout>

</LinearLayout>