<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <android.support.percent.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
     


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cotdImage"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="50%" />

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cotdImage"
        app:cardCornerRadius="8dp"
        android:layout_height="270dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/cotdTitle"
        android:textSize="26sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"

        />
            <TextView
                android:id="@+id/minefftitle"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text="Effects"
                android:textStyle="bold"
                android:layout_below="@id/cotdTitle"
                android:layout_alignLeft="@id/cotdTitle"
                android:layout_alignRight="@id/cotdTitle"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/minefftitle"
            android:id="@+id/cotdeff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text="Cooldown"
                android:visibility="gone"
                android:id="@+id/cdtitle"
                android:textStyle="bold"
                android:layout_below="@id/cotdeff"
                android:layout_alignLeft="@id/cotdTitle"
                android:layout_alignRight="@id/cotdTitle"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/cotd_cd"
                android:layout_below="@+id/cotdeff"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/efftitle"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text="Fully Upgraded Effects"
                android:textStyle="bold"
                android:layout_below="@id/cotd_cd"
                android:layout_alignLeft="@id/cotdTitle"
                android:layout_alignRight="@id/cotdTitle"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/cotd_full_eff"
                android:layout_below="@id/efftitle"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

     </android.support.percent.PercentRelativeLayout>
</LinearLayout>