<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@android:color/background_light"
    android:theme="@style/Theme.AppCompat.para.Dialog.Alert">



    <EditText
        android:id="@+id/playerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Epic Account Name"/>
    <Button
        android:id="@+id/playerqueryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Search"
        android:onClick="onSearch"/>



    <Space
        android:layout_width="match_parent"
        android:layout_height="21dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone" />


    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="90%">


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="61%"
            app:layout_widthPercent="50%"

            />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="61%"
        app:layout_widthPercent="50%"
        app:layout_marginLeftPercent="50%"
        />
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_heightPercent="38%"
            app:layout_widthPercent="100%"
            app:layout_marginTopPercent="65%"
            />




    </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/playerresponseView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:width="0dp"/>




</LinearLayout>
