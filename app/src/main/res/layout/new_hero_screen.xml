<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/hero_portrait"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/difficulty_bar"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
   />

    <ProgressBar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty_bar"
        android:animationResolution="10000"
        android:max="3"
        style="?android:attr/progressBarStyleHorizontal"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/ability_power_bar"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/difficulty_text"
        android:text="Difficulty"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textSize="21dp"
        android:fontFamily="sans-serif-condensed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/difficulty_bar"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_bar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/difficulty_bar" />

    <ProgressBar
        android:id="@+id/ability_power_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/physical_power_bar"
        app:layout_constraintRight_toRightOf="@+id/durability_bar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/durability_bar"
        app:layout_constraintTop_toTopOf="@+id/physical_power_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="Ability Power"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="37dp"
        app:layout_constraintRight_toRightOf="@+id/ability_power_bar"
        app:layout_constraintTop_toBottomOf="@+id/ability_power_bar"
        android:id="@+id/textView4"
        android:layout_marginRight="37dp" />

    <ProgressBar
        android:id="@+id/physical_power_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/mobility_bar"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="159dp"
        app:layout_constraintLeft_toLeftOf="@+id/mobility_bar"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="Physical Power"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="@+id/physical_power_bar"
        app:layout_constraintTop_toBottomOf="@+id/physical_power_bar" />

    <ProgressBar
        android:id="@+id/durability_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/mobility_bar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mobility_bar" />

    <TextView
        android:text="Durability"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/durability_bar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView4" />

    <ProgressBar
        android:id="@+id/mobility_bar"
        android:layout_width="150dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="71dp" />

    <TextView
        android:text="Mobility"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/mobility_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mobility_bar"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/mobility_bar" />

    <TextView
        android:id="@+id/hero_name"
        app:layout_constraintRight_toLeftOf="@id/difficulty_text"
        app:layout_constraintLeft_toRightOf="@id/difficulty_text"
        app:layout_constraintBottom_toTopOf="@+id/difficulty_bar"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.505" />


</android.support.constraint.ConstraintLayout>