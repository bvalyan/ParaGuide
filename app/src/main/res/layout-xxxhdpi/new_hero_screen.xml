<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/hero_portrait"
        android:layout_height="350dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/hero_portrait"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="340dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:id="@+id/difficulty_bar"
                android:animationResolution="10000"
                android:max="3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/difficulty_text"
                android:text="Difficulty"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/difficulty_bar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="21dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed"
                />

            <ProgressBar
                android:id="@+id/ability_power_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_below="@id/difficulty_text"
                android:layout_marginTop="10dp"
                android:layout_width="140dp"
                android:layout_marginLeft="240dp"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="Ability Power"
                android:layout_below="@id/ability_power_bar"
                android:layout_alignRight="@id/ability_power_bar"
                android:layout_alignLeft="@id/ability_power_bar"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                />

            <ProgressBar
                android:id="@+id/physical_power_bar"
                android:layout_below="@id/difficulty_text"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                />

            <TextView
                android:text="Physical Power"
                android:layout_below="@id/physical_power_bar"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/physical_power_bar"
                android:layout_alignLeft="@id/physical_power_bar"
                android:textAlignment="center"
                android:id="@+id/textView3"
                />

            <ProgressBar
                android:id="@+id/durability_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginTop="55dp"
                android:layout_alignLeft="@id/physical_power_bar"
                />

            <TextView
                android:text="Durability"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/durability_bar"
                android:layout_alignLeft="@id/durability_bar"
                android:layout_alignRight="@id/durability_bar"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <ProgressBar
                android:id="@+id/mobility_bar"
                android:layout_width="140dp"
                android:layout_marginTop="55dp"
                android:layout_below="@id/textView4"
                android:layout_alignLeft="@id/ability_power_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="Mobility"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobility_bar"
                android:layout_alignRight="@id/mobility_bar"
                android:layout_alignLeft="@id/mobility_bar"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/hero_name"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:text="TextView"
                android:layout_marginBottom="8dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>